{
  "compilerOptions": {
    "strict": true,
    "removeComments": true,   
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true, 
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}